<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:id="@+id/contentCardEvent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageEvent"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:contentDescription="@string/string_null"
            android:scaleType="centerCrop"
            android:layout_marginEnd="5dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/nameEvent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>

            <View style="@style/Divider"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/localEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey_material_medium"
                android:drawableStart="@drawable/map_marker_radius"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/dateEvent"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/grey_material_medium"
                    android:drawableStart="@drawable/calendar_red"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/hourEvent"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/grey_material_medium"
                    android:drawableStart="@drawable/clock"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/limitGuests"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/grey_material_medium"
                    android:drawableStart="@drawable/account_multiple"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/eventTypeAccess"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/grey_material_medium"
                    android:drawableStart="@drawable/key_variant"
                    android:gravity="center_vertical"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>