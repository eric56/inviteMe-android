<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBarWidgetTheme</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <item name="android:typeface">sans</item>

    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:colorAccent">@color/red</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/primaryDark</item>
        <item name="android:calendarTextColor">@color/white</item>
        <item name="android:dayOfWeekBackground">@color/primary</item>
        <item name="android:yearListSelectorColor">@color/red</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="CustomOthersView">
        <item name="android:theme">@style/ColorAccentRedAppTheme</item>
    </style>

    <style name="CustomCheckBox">
        <item name="android:theme">@style/CheckBoxAppTheme</item>
    </style>

    <style name="CustomSwitch">
        <item name="android:theme">@style/CustomSwitchAppTheme</item>
    </style>

    <style name="CheckBoxAppTheme">
        <item name="colorAccent">@color/red_material</item> <!-- Cor quando checked is true -->
        <item name="android:colorControlNormal">@color/primary</item> <!-- Cor da borda quando checked is false-->
        <item name="android:colorControlHighlight">@color/primaryDark</item> <!-- Cor de fundo quando o estado estiver mudando-->
    </style>

    <style name="CustomSwitchAppTheme">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/red_material</item>
        <item name="colorAccent">@color/red_material</item>
    </style>

    <style name="ColorAccentRedAppTheme">
        <item name="colorAccent">@color/red_material</item>
    </style>


</resources>